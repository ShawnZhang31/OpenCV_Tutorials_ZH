{
    "title" : "OpenCV 官方教程",
    "author": "守着瓜的猹",
    "description": "基于OpenCV 4.1.2版的官方教程中文版",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "root": "./",
    "links": {
        "sidebar": {},
        "sharing": {
            "google": null,
            "facebook": null,
            "twitter": null,
            "weibo": null,
            "all": null
        }
    },
    "plugins": ["katex",
        "tbfed-pagefooter",
        "github",
        "-lunr", "-search", "search-plus",
        "local-video",
        "donate",
        "-sharing", "sharing-plus",
        "code",
        "back-to-top-button",
        "expandable-chapters-small",
        "insert-logo",
        "page-toc-button"],

    "pluginsConfig": {
        "mathjax":{
            "forceSVG": true
        },
        "pluginsConfig": {
            "page-toc-button": {
                "maxTocDepth": 3,
                "minTocSize": 2
               }
        },
        "tbfed-pagefooter":{
            "copyright":"Copyright &copy 守着瓜的猹 2020",
            "modify_label": "该文件修订时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "github": {
            "url": "https://github.com/ShawnZhang31/OpenCV_Tutorials_ZH"
        },
        "donate": {
            "wechat": "https://shawnzhang31.com/topic/opencvtutorial/res/donate_wechat.png",
            "alipay": "https://shawnzhang31.com/topic/opencvtutorial/res/donate_alipay.png",
            "title": "赏一杯咖啡吧",
            "button": "打赏",
            "alipayText": "支付宝打赏",
            "wechatText": "微信打赏"
        },
        "sharing": {
            "douban": true,
            "facebook": true,
            "google": true,
            "hatenaBookmark": false,
            "instapaper": false,
            "line": false,
            "linkedin": false,
            "messenger": false,
            "pocket": false,
            "qq": true,
            "qzone": true,
            "stumbleupon": false,
            "twitter": false,
            "viber": false,
            "vk": false,
            "weibo": true,
            "whatsapp": false,
            "all": [
                "facebook", "google", "twitter",
                "weibo", "instapaper", "linkedin",
                "pocket", "stumbleupon"
            ]
        },
        "insert-logo": {
            "url": "https://shawnzhang31.com/topic/opencvtutorial/res/logo.png",
            "style": "background: none; max-height: 30px; min-height: 30px"
          }
    }
